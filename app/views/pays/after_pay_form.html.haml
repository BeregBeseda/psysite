= form_for @order do |f|
  :css
    .btn {
      margin-top: 0 !important;
      margin-bottom: 5px !important;
    }
    
    .btn:hover {
      cursor: text;
    }

  .label_words{style: 'text-align: center !important; color: #175717 !important; font-size: 160%;'}
    Пожалуйста, введите
    
    
  .label_words{style: 'text-align: center !important; color: #175717 !important; font-size: 160%;'}
    Ваше имя:
  = f.text_field :name, class: ' btn ' ' my-btn ' ' my-btn-large ', style: 'background-color: white; color: green !important; max-width: 300px;'    
    
  
  .label_words{style: 'text-align: center !important; color: #175717 !important; font-size: 160%;'}
    2 последние цифры карты, с которой перечислена оплата:       
  = f.text_field :end_cards, class: ' btn ' ' my-btn ' ' my-btn-large ', style: 'background-color: white; color: green !important; max-width: 300px;'
    
    
  .label_words{style: 'text-align: center !important; color: #175717 !important; font-size: 160%;'}
    дату и время оплаты:     
  = f.text_field :when_payed, class: ' btn ' ' my-btn ' ' my-btn-large ' ' text-field_psy ', style: 'background-color: white; color: green !important; max-width: 300px;'
  
  = f.submit 'Ok', class: ' btn ' ' btn-success ' ' submit_button_psy '



