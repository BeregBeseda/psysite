.row-fluid{style: 'margin-top: 5%; font-size: 105%;'}
  .offset3.span6
    -# СОДЕРЖИМОЕ ПО ЦЕНТРУ
    .block{style: 'text-align: center; padding: 30px; '}

      = form_for @order do |f|
        :css
          .btn {
            margin-top: 0 !important;
            margin-bottom: 5px !important;
          }
        
          .btn:hover {
            cursor: text;
          }
    
        .label_words{style: 'text-align: center !important; color: #175717 !important; '}
          = @name
          , пожалуйста, введите
        
        -#
          %br/
          .label_words{style: 'text-align: center !important; color: #175717 !important; '}
            Ваше имя:
          = f.text_field :name, class: ' btn ' ' my-btn ' ' my-btn-large ', style: 'background-color: white; color: green !important; max-width: 300px;'    


        .label_words{style: 'text-align: center !important; color: #175717 !important; '}
          2 последние цифры 
          %br/
          кредитной карты:       
        = f.text_field :end_cards, required: '', class: ' btn ' ' my-btn ' ' my-btn-large ', style: 'background-color: white; color: green !important; max-width: 300px;'

        %br/        
        %br/
        .label_words{style: 'text-align: center !important; color: #175717 !important; '}
          Дату и время оплаты:     
        = f.text_field :when_payed, required: '', class: ' btn ' ' my-btn ' ' my-btn-large ' ' text-field_psy ', style: 'background-color: white; color: green !important; max-width: 300px;'

        %br/       
        %br/
        = f.submit 'Ok', class: ' btn ' ' btn-success ' ' submit_button_psy '
    
    

